<% layout( 'layout' ) -%>

<h1 id="page-title"><%= title %></h1>
<div class="container">
<div class="col-sm-5">
    <form action="/update/<%= customer._id %>" method="post" accept-charset="utf-8" role="form" class="form-horizontal">
      <div class="form-group">
      <label>Name:</label>
      <input class="form-control" type="text" name="Name" value="<%= customer.Name %>" />
      </div>
      <div class="form-group">
      <label>Mobile:</label>
      <input class="form-control" type="text" name="Mobile" value="<%= customer.Mobile %>" />
      </div>
      <div class="form-group">
      <label>Landline Number:</label>
      <input class="form-control" type="text" name="Phone" value="<%= customer.Phone %>" />
      </div>
      <div class="form-group">
      <label>Flat Number:</label>
      <input class="form-control" type="number" name="FlatNo" value="<%= customer.Address[0].FlatNo %>" />
      </div>
      <div class="form-group">
      <label>Street Number:</label>
      <input class="form-control" type="number" name="Street" value="<%= customer.Address[0].Street %>" />
      </div>
      <div class="form-group">
      <label>State:</label>
      <input class="form-control" type="text" name="State" value="<%= customer.Address[0].State %>" />
      </div>
      <div class="form-group">
      <label>Pin code:</label>
      <input class="form-control" type="number" name="PinCode" value="<%= customer.Address[0].PinCode %>" />
      </div>
      <div class="form-group">
      <label>Date of Birth:</label>
      <input class="form-control" type="date" name="DOB" value="<%= customer.DOB %>" />
      </div>
      <div class="form-group">
      <label>Email:</label>
      <input class="form-control" type="email" name="Email" value="<%= customer.Email %>" />
      </div>
      <div class="form-group">
       <button type="submit" name="action">Submit</button>
       </div>
    </form>
</div>
</div>